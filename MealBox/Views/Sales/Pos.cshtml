                        Amount3For = (Amount3 * 3) / 100
                    })

                    totalAmount = Amount3 + Amount3For
                    $('#3Textbox').val(Amount3For);
                    $('#17Textbox').val('');
                    $('#TotalAmount').val(totalAmount)

