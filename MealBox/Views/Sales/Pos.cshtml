                    var Amount3For = 0;
                    var totalAmount3 = 0;

                    $('#AddPos tbody .select-row2 ').each(function (index, ele) {
                        Amount3 += parseFloat($(this).closest('tr').find('td').eq('3').find('input').val());
                        Amount3For = (Amount3 * 3) / 100
                    })
