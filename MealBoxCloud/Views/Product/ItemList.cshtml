@model List<MealBoxCloud.Models.ProductModel>

@{
    ViewBag.Title = "ItemList";
}

<h2>ItemList</h2>


@section Styles 
    {

    <link href="~/plugins/datatables-autofill/css/jquery.dataTables.css" rel="stylesheet" />

}

<div class="card-header">
   <a style="float:right;"  type="button" class= "btn btn-success" href="@Url.Action("AddItem","Product")">Add ItemType</a>
</div>


<table id="mytable" class="table-bordered ">
  
    <thead>
        <tr>
            <th style="text-align:center"></th>
            <th style="text-align:center">Product Name</th>
            <th style="text-align:center">Product Category</th>
            <th></th>
        </tr>
    </thead>  
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td></td>
            <td>@item.ProductName</td>
            <td>@item.ProductTypeName</td>
            <td><a style="width:100%; height:100%" class="btn btn-dropbox" href="@Url.Action("AddItem","Product", new { id = @item.ProductID})"><i class="fa fa-fw fa-edit"></i>Edit</a></td>
        </tr>
        }
    </tbody>
</table>



@section Scripts
 
    {

    <script src="~/plugins/datatables-autofill/js/jquery.dataTables.js"></script>
    <script type="text/javascript">


        $(document).ready(function () {
            $('#mytable').DataTable();
        });

    </script>

}