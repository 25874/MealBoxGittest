                    for (var i = 0; i < result.length; i++) {
                        fill += '<option value="' + result[i].SupplierId + '">' + result[i].SupplieName + '</option>';
                    }
                    $('#SupplierId').html(fill);
                }
            })
        }

        function CustomerIdDDl()
        {
            $.ajax({
                type: 'Get',
                url: '/Report/CustomerDDl',
                contentType: "application/json?charset=utf-8",
                success: function (result) {
                    var fill = '<option value="-1" >---Select---</option>'
                    for (var i = 0; i < result.length; i++) {
                        fill += '<option value="' + result[i].CustomersId + '">' + result[i].CustomersName + '</option>';
                    }
                    $('#CustomerId').html(fill);
                }
            })
        }

        function AccountIdDDl()
        {
            $.ajax({
                type: 'Get',
                url: '/Account/SubHeadDDl',
                contentType: "application/json?charset=utf-8",
                success: function (result)
                {
                    var fill = '<option value="-1" >---Select---</option>'
                    for (var i = 0; i < result.length; i++) {
                        fill += '<option value="' + result[i].SubHeadGeneratedID + '">' + result[i].SubHeadName + '</option>';
                    }
                    $('#SubAccountIdfkv').html(fill);
                }
            })
        }

    </script>
}