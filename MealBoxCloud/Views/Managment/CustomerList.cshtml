@model List<MealBoxCloud.Models.CustomerModel>

@{
    ViewBag.Title = "CustomerList";
}

<h2>CustomerList</h2>
@section Styles {
    <link href="~/plugins/datatables-autofill/css/jquery.dataTables.css" rel="stylesheet" />
    <style>
    </style>
}
<div class="card-header">

    <a style="float:right;" type="button" class="btn btn-success" href="@Url.Action("AddCustomer","Managment")">Add Customer</a>

</div>


<table id="mytable" class="table-bordered ">
    <thead>
        <tr>
            <th style="text-align:center"></th>
            <th style="text-align:center">Supplier Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>@item.CustomerName</td>
                <td><a style="width:100%; height:100%" class="btn" href="@Url.Action("AddCustomer","Managment", new { id = @item.CustomerID})"><i class="fa fa-fw fa-edit"></i>Edit</a></td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
    {

    <script src="~/plugins/datatables-autofill/js/jquery.dataTables.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#mytable').DataTable();
        });
    </script>

}

